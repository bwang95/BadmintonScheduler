<?xml version="1.0" encoding="utf-8"?>
<com.cerridan.badmintonscheduler.view.CourtItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >
  <View
      android:layout_gravity="top"
      style="@style/Widget.BadmintonScheduler.Divider"
      />
  <TextView
      android:id="@+id/tv_court_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start|center_vertical"
      android:layout_marginEnd="@dimen/global_padding"
      android:padding="@dimen/global_padding_quarter"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      tools:text="Court 25"
      />
  <TextView
      android:id="@+id/tv_court_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|center_vertical"
      android:padding="@dimen/global_padding_quarter"
      tools:text="65 minutes (8:00 PM)"
      />
</com.cerridan.badmintonscheduler.view.CourtItemView>