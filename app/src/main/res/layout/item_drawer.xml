<?xml version="1.0" encoding="utf-8"?>
<com.cerridan.badmintonscheduler.view.DrawerItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:padding="@dimen/global_padding_half"
    >
  <ImageView
      android:id="@+id/iv_drawer_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/global_padding"
      android:contentDescription="@string/drawer_item_content_description"
      tools:src="@drawable/icon_player"
      />
  <TextView
      android:id="@+id/tv_drawer_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@android:style/TextAppearance.Large"
      tools:text="@string/players_title"
      />
</com.cerridan.badmintonscheduler.view.DrawerItemView>